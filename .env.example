TURSO_AUTH_TOKEN=your_turso_auth_token_here

# -----------------
# Groq API (Primary + Fallbacks)
# -----------------
# Ces clés seront gérées via dashboard admin, mais gardez-en une ici pour init
GROQ_API_KEY=gsk_your_primary_groq_key_here

# -----------------
# SendGrid Email
# -----------------
SENDGRID_API_KEY=SG.your_sendgrid_key_here
SENDGRID_FROM_EMAIL=nexusstudio100@gmail.com
SENDGRID_FROM_NAME=NEXUS Studio

# -----------------
# Nexus Studio Info
# -----------------
NEXUS_STUDIO_EMAIL=nexusstudio100@gmail.com
NEXUS_STUDIO_CEO=Daouda Abdoul Anzize

# -----------------
# Security
# -----------------
ADMIN_KEY=your_super_secret_admin_key_change_this_in_production

# -----------------
# Rate Limiting
# -----------------
SCAN_BATCH_SIZE=500
SCAN_INTERVAL_MS=3600000
NOTIFICATION_COOLDOWN_MS=3600000
MAX_NOTIFICATIONS_PER_WEEK=1

# -----------------
# Server Config
# -----------------
NODE_ENV=production
PORT=3000

# -----------------
# Cache Config
# -----------------
